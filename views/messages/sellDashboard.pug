extends ./../partials/header
block main
  .messages-wrapper
    span.messages-header #{__('Mitteilungen fÃ¼r das Produkt')} (#{product.name})
    each message in messages
      a.each-user(href="/messages/sell/?id=" + product._id + "&user=" + message.buyer)
        if (message.messages.filter((eachMessage) => { return !eachMessage.read }).length > 0) 
          .not-read-empty
            .not-read-message-icon
              span= message.messages.filter((eachMessage) => { return !eachMessage.read }).length
        else 
          .not-read-empty
        img.each-user-profile(src="/res/images/defaultUserPicture.png")
        span.each-user-name= message.buyerName
    if messages.length <= 0
      .no-product-warning
        span #{__('Es gibt keine Nachricht.')}
