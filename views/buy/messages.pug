extends ./../partials/header
block main
  .--s_header
    span Send a message to seller #{product.owner.email} for his/her product: #{product.name}
  .--s_content
    .--s_messages_wrapper
      each message in messages
        div(class= (message.sender === "owner") ? "--s_each_message_owner" : "--s_each_message_buyer")
          span= message.content
    form.--s_messages_send_wrapper(method="post" action="/buy/messages/?id=" + product._id)
      .--s_send_line
        span to: #{product.owner.email}
        .--s_send_button
          span Send
          i.fas.fa-paper-plane
      textarea.--s_messages_send(name="message" cols="30" rows="10" placeholder="Type a message" autofocus autocomplete="off" spellchech="false") 
