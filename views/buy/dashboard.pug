extends ./../partials/header
block main
  .product-header
    .root-info
      if keywords
        span #{number} products found for the category "#{category}" with the keywords "#{keywords}". Showing #{limit} products per page
      else
        span #{number} products found for the category "#{category}". Showing #{limit} products per page
    .change-page-wrapper 
      if keywords
        - for (let i = 0; i < number; i += limit) {
          a(href=`/buy/?category=${category}&page=${i}&keywords=${keywords}&limit=${limit}`)= i+1
        - }
      else
        - for (let i = 0; i < number; i += limit) {
          a(href=`/buy/?category=${category}&page=${i}&limit=${limit}`)= i+1
        - }
  .products-wrapper
    each product in products
      .each-product
        img.product-image(src=product.productPhotoArray[0].source)
        span.product-name #{product.name}
        .product-location
          i.fas.fa-map-marker-alt
          span Location
        span.product-price #{product.price}
