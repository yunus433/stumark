doctype html
html(lang="tr")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no, maximum-scale=1.0, user-scalable=0")
    meta(name="description" content="Stumarkt.com: Öğrenciden öğrenciye! Stumarkt, özellikle öğrenciler için tasarlanmış bir ikinci el alım-satım platformudur. İlk olarak Almanya'da öğrenciler için ikinci el alışveriş ve takas platformu olarak kurulan Stumarkt, şimdi Türkiye'de! Sen de hemen Stumarkt'a kaydolup ürün yüklemeye başlayabilirsin!")
    title Stumarkt | #{title}
    if includes && includes.external
      if includes.external.indexOf('fontawesome') > -1
        link(rel="stylesheet",
            href="https://use.fontawesome.com/releases/v5.2.0/css/all.css",
            integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ",
            crossorigin="anonymous")
      if includes.external.indexOf('js') > -1 
        script(src=`/js/${page}.js`)
      if includes.external.indexOf('socket.io') > -1 
        script(src=`/socket.io/socket.io.js`)
      if includes.external.indexOf('css') > -1 
        link(rel="stylesheet", href=`/css/${page}.css`)
      if includes.external.indexOf('auth_css') > -1 
        link(rel="stylesheet", href=`/css/auth/general.css`)
      if includes.external.indexOf('agreement_css') > -1 
        link(rel="stylesheet", href=`/css/auth/agreement.css`)
      if includes.external.indexOf('admin_general_css') > -1
        link(rel="stylesheet", href='/css/admin/general.css')
    script(src="/js/addEventListener.js")
    link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:100,200,300,400,500,600,700,800,900" rel="stylesheet")
    link(rel="stylesheet", href=`/css/general.css`)
  body
    block content
