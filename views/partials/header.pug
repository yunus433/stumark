extends ./head
block content
  .all-wrapper
    .all-header
      img.all-header-logo(src="/res/images/logo.png")
      .search-bar-wrapper
        input.search-bar-input(type="text" placeholder="Was suchst du?" autocomplete="off" autofocus)
        .search-bar-button
          span Suche
      .header-messages-wrapper
        img.messages-icon-image(src="/res/images/messagesIcon.png")
        .header-messages-explanation
          span Anzeige 
          span aufgeben
      .header-login-wrapper
        .login-link-wrapper
          a.login-link(href="/auth/login") Einloggen
          span oder
          a.register-link(href="/auth/register") Registrieren
        img.user-login-icon(src="/res/images/userIcon.png")
    .all-content
      .content-bar
        span.category-header Kategorien:
        a.category-link(href="/buy/?page=0&category=all&limit=50") Andre
        a.category-link(href="/buy/?page=0&category=rented") Mietwonhung und Nachmiete
        a.category-link(href="/buy/?page=0&category=hobby") Freizet, Hobby
        a.category-link(href="/buy/?page=0&category=home&limit=50") Möbel, Haus 
        a.category-link(href="/buy/?page=0&category=fashion") Mode, Kleidung
        a.category-link(href="/buy/?page=0&category=electronic") Elektronik
        a.category-link(href="/buy/?page=0&category=fun") Music, Filme, Bücher
        a.category-link(href="/buy/?page=0&category=tickets") Eintrittskarten, tickets
        a.category-link(href="/buy/?page=0&category=exchange") Zu verschenken, tauschen
        a.category-link(href="/buy/?page=0&category=lesson") Unterricht, Kurse
        a.category-link(href="/buy/?page=0&category=other") Alle
      .main-wrapper
        block main
